<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddActivity"
    android:padding="12dp">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edt_layout_set_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ti_layout"
        android:hint="Input Name"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        app:layout_constraintStart_toStartOf="@id/tv_name" >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_set_name"
            style="@style/et_layout"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@id/tv_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/edt_layout_set_name"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ti_layout"
        android:hint="Input Weight"
        app:layout_constraintTop_toBottomOf="@id/tv_weight"
        app:layout_constraintStart_toStartOf="@id/tv_weight" >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_weight"
            style="@style/et_layout"/>

    </com.google.android.material.textfield.TextInputLayout>
    
    <TextView
        android:layout_width=""
        android:layout_height=""

</androidx.constraintlayout.widget.ConstraintLayout>
